<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>


            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#2e2e2e" android:startColor="#2e2e2e" android:type="linear" />

                    <stroke android:width="0.33dp" android:color="#2e2e2e" />

                    <corners android:radius="0dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/newarrowspinner" />

            </item>

        </layer-list>

    </item>

</selector>