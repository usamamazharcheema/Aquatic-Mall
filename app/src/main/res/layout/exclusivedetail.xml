<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/layout_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_weight="1"
        android:id="@+id/exclusivemainupper"
        android:orientation="vertical"

        android:weightSum="10"

        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="0dp">
            <LinearLayout
                android:id="@+id/exclusivebacklayout"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/exclusivbakc"

                    android:src="@drawable/backarrowfragment"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/titleex"
                    android:text="Items"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

   <LinearLayout
       android:visibility="gone"
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="0dp">




                <TextView
                    android:visibility="gone"
                    android:id="@+id/featuretext"
                    android:gravity="center"
android:textColor="#000000"
                    android:layout_centerInParent="true"
                    android:text="But that has not deterred the ousted prime minister and his loyalists from attacking the judges. The confrontation between the judiciary and Sharif has become ugly and destructive. Neither side seems to be relenting. To many, it appears like a no-holds-barred clash of egos."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

   </LinearLayout>
            <LinearLayout
android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <android.support.v7.widget.RecyclerView

                    android:id="@+id/featurerecclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>







</LinearLayout>