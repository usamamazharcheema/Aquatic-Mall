<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:background="@drawable/layout_bg"
        android:orientation="vertical"

        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/ratebg"
            android:weightSum="5"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:id="@+id/signup_back"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/backarrowfragment"/>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Sign Up"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="@dimen/_15sdp"
                android:layout_weight="4.3"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:gravity="bottom"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Name:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingRight="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <EditText
                    android:textSize="@dimen/_10sdp"
                    android:hint="asafaizi"
                    android:id="@+id/signup_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:gravity="bottom"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Email:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingRight="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <EditText
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/signup_email"
                    android:hint="asafaizi@gmail.com"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:gravity="bottom"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Password:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingRight="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <EditText
                    android:inputType="textPassword"
                    android:textSize="@dimen/_10sdp"
                    android:hint="asafaiziqq11"
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:gravity="bottom"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Phone:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingRight="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <EditText
                    android:textSize="@dimen/_10sdp"
                    android:inputType="phone"
                    android:hint="2323"
                    android:id="@+id/signup_phone"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_weight="0.4"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="OR  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_weight="0.4"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="Sign Up using   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/facebook"
                android:layout_width="@dimen/_30sdp"
                android:id="@+id/signup_fb"
                android:layout_marginRight="@dimen/_9sdp"
                android:layout_height="match_parent" />
            <ImageView

                android:src="@drawable/email"

                android:layout_width="@dimen/_30sdp"
                android:id="@+id/signup_gm"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"></LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:text="Sign Up"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/signup_register"
                android:background="@drawable/butnnbackregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>