<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e6e7e8"
    tools:context="com.bizventure.androiddeveloper.aquatic_mall.Animationopen">
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/hiddenfirst"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hiddenafter"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_445sdp">
        <LinearLayout
            android:background="@drawable/layout_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_360sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:weightSum="10"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/aquatic_sico"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="center"
                        android:text="  The Aquatic Mall"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:text="  added a new photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/sharepic"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_height="match_parent">
                    <Spinner
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/sharepictext"
                        android:textSize="@dimen/_25sdp"
                        android:text="..."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"

                >
                <TextView
                   android:visibility="gone"
                    android:textStyle="bold"
                    android:text="Headings"
                    android:gravity="center"
                    android:id="@+id/newsheadings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
android:paddingLeft="@dimen/_50sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:text="Details"


                    android:id="@+id/newsdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <ImageView
                    android:scaleType="centerCrop"
                    android:background="@drawable/layout_bg"
                    android:id="@+id/newsimg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_210sdp" />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layout_bg"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_weight="4.9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/likes"
                            android:gravity="center"
                            android:text="71"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/likebtn"
                            android:src="@drawable/unlike"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_35sdp" />
                    </LinearLayout>
                        <LinearLayout
                            android:layout_weight="2.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/likess"
                                android:gravity="center"
                                android:text="Like"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/lineeee"
                    android:layout_weight="0.08"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp">
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_weight="4.9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center|end"
                        android:layout_weight="2.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:background="@drawable/commentt"

                            android:text="71"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_22sdp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="4.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/commentsopen"
                            android:gravity="center"
                            android:text="Comments"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/commentsnumber"
                            android:gravity="center"
                            android:text="71"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <Button
                    android:onClick="share"
                    android:text="share"
                    android:id="@+id/sharebtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/layout_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <TextView

                android:id="@+id/addcomment"
                android:gravity="center"
                android:text="Add comment..."

                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp">

            </TextView>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/entercommentlayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp">
                <EditText
                    android:layout_toLeftOf="@+id/sendcomment"
                    android:id="@+id/commententer"
                    android:padding="@dimen/_10sdp"
                    android:hint="Write comment..."
                    android:background="@drawable/layout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ProgressBar
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:id="@+id/progressBarloading"
                    android:progressDrawable="@drawable/cicularprogress"
                    android:layout_centerInParent="true"
                    />
                <Button
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:background="#29BBBD"
                    android:text="send"
                    android:id="@+id/sendcomment"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>
