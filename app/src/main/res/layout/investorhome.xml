<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#D3D3D3"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:weightSum="10">
        <LinearLayout
            android:id="@+id/hidelatest"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:weightSum="10"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout


                        android:id="@+id/mainpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </FrameLayout>


                </RelativeLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/homebars"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_weight="1.2"
                android:id="@+id/profile"
                android:layout_height="0dp">
                <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/aboutmall"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center"
                android:background="@drawable/homebars"
                android:layout_width="match_parent"
                android:layout_weight="1.4"
                android:layout_height="0dp">
                <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="About Mall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lookingtoinvestlayout"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/homebars"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_weight="1.4"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/lookingtoinvesttext"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Looking To Invest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
android:orientation="vertical"

            >
            <LinearLayout
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/homebars"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_weight="0.9"
                android:id="@+id/latestnewsclick"
                android:layout_height="0dp">
                <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Latest News"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="8"
                android:layout_height="0dp">


            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/newsrycyler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>