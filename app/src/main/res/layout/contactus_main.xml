<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="true"
    android:clipToPadding="true"


    >
<LinearLayout
    android:weightSum="10"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_weight="1"
        android:background="@drawable/home_bars"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/backlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/backarrowfragment" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriad_pro_bold"
                android:text="Contact Us"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <com.dev.sacot41.scviewpager.SCViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </com.dev.sacot41.scviewpager.SCViewPager>
<LinearLayout
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp">

<LinearLayout
android:id="@+id/layoutback"
    android:gravity="right"
  android:layout_weight="2"
    android:layout_width="0dp"
    android:layout_height="match_parent">


    <ImageView

        android:id="@+id/back"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_13sdp"

        android:src="@drawable/backarrowfragment" />
</LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    <com.dev.sacot41.scviewpager.DotsView
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/dotsview_main"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutnext"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/farward"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_13sdp"

        android:src="@drawable/featurenextnew" />
    </LinearLayout>
</LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
