<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/featuretext"
        android:gravity="center"
        android:textColor="#000"

        android:text="But that has not deterred the ousted prime minister and his loyalists from attacking the judges. The confrontation between the judiciary and Sharif has become ugly and destructive. Neither side seems to be relenting. To many, it appears like a no-holds-barred clash of egos."
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp" />
    <ImageView
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/picturesfeature"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/_250sdp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"></LinearLayout>
</LinearLayout>