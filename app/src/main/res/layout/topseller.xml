<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2C2C2">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/inoflayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/ratebg"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/backbress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.65"
                android:gravity="center">

                <ImageButton
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@drawable/backarrowfragment" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/myriad_pro_bold"
                android:gravity="center_vertical"
                android:text="Notifications"
                android:textColor="#000000"
                android:textSize="@dimen/_17sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_weight="7.6"
            android:weightSum="10"
            android:orientation="vertical"
            android:background="@drawable/topsellerinfoback">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="8.4"
    android:layout_height="0dp">
    <android.support.v4.view.ViewPager
        android:id="@+id/infopager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>

            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:layout_marginTop="@dimen/_1sdp">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/accepeted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myriadpro_regular"
                    android:text="The request has been accepted already."
                    android:textAlignment="center"
                    android:textColor="#e73333"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
<ImageView
   android:layout_alignParentLeft="true"
    android:layout_width="@dimen/_25sdp"
    android:layout_height="@dimen/_20sdp"
    android:id="@+id/back"
    android:src="@drawable/backarrowfragment"
    />
                <ImageView
                   android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
android:id="@+id/next"
                    android:src="@drawable/featurenextnew"
                    />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center">

            <Button
                android:id="@+id/accpetrequest"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:background="@drawable/background_button2"
                android:fontFamily="@font/myriad_pro_bold"
                android:text="Accept Request"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08" />


    </LinearLayout>

<ImageView
    android:id="@+id/loadingnotification"
    android:layout_centerInParent="true"
    android:src="@drawable/newicon"
    android:layout_width="@dimen/_55sdp"
    android:layout_height="@dimen/_55sdp" />
</RelativeLayout>